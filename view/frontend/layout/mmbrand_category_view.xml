<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Mavenbird_Shopbybrand::css/font-awesome.min.css"/>
        <css src="Magento_Swatches::css/swatches.css"/>
    </head>
    <body>
        <referenceBlock name="head.additional">
            <block class="Mavenbird\Shopbybrand\Block\Design" name="brand.design" as="generator.css" template="design.phtml"/>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Mavenbird\Shopbybrand\Block\Brand" name="brand.content" template="brands.phtml">
                <block class="Mavenbird\Shopbybrand\Block\Brand\Search" name="brand.search" as="search" ifconfig="shopbybrand/brandpage/search/enable" template="brand/search.phtml"/>
                <block class="Mavenbird\Shopbybrand\Block\Brand\Featured" name="brand.featured" as="feature" ifconfig="shopbybrand/brandpage/feature/enable"/>
                <block class="Mavenbird\Shopbybrand\Block\Brand\Category" name="brand.category.list" as="category.list" template="category/list.phtml">
                    <block class="Mavenbird\Shopbybrand\Block\Brand\Category" name="brand.category.list.alpha" as="alphabet" template="brand/list/alphabet.phtml"/>
                    <block class="Mavenbird\Shopbybrand\Block\Brand\Category" name="brand.category.list.listing" as="listing" template="brand/list/listing.phtml"/>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>